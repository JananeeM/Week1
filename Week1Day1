
//Converting negative number to positive number

package DataTypeAndVariable;

public class CovertNegNumToPosNum {

	public static void main(String[] args) {
		int number=-40;
		int a;
		if(number<0)
		{
			System.out.println("The Given Number is negative");
			a=number*-1;
			System.out.println(number + " is converted into positive number " + a);
		}
			
		else  
			System.out.println("The Given Number Is Positive");
		
	}

}



//Factorial of a given number

package DataTypeAndVariable;

public class Factorial {

	public static void main(String[] args) {
		
		 int input=5;
		 int i=1;
		 int c=0;
		
		 for(i=input-1;i>0;i--)
		 {
			 c=input*i;
			 input=c;
			 System.out.println(+ i );
			 
		 }
		 System.out.println("Factorial is " + input );
	
	}

}


//Fibonacci series

package DataTypeAndVariable;

public class FibbonaciSeries {
	public static void main(String[] args) {
	
	int i=0;
	int firstNum=0;
	int secNum=1;
	int c;
	
	System.out.println(+firstNum);
	System.out.println(+secNum);
	for(i=1;i<8;i++)
	{
		c=firstNum+secNum;
		System.out.println(+c);
		firstNum=secNum;
		secNum=c;
		//secNum=c;
		//firstNum=secNum;
		
	}
	
}
}


//Finding wheter the given number is positive or negative


package DataTypeAndVariable;

public class PositiveAndNegativeNumbers {
	
	public static void main(String[] args) {
	
	
	int number=10;
	
	if(number<0)
	{
		System.out.println("The Number is a Negative Number");
	}
	else if(number>0)
	{
		System.out.println("The Number is a Positive Number");
		
			
	}
	else 
		System.out.println("The number is neither positive nor negative");

}
}


//Prime number
package DataTypeAndVariable;

public class PrimeNumber {

	public static void main(String[] args) {
		int input=11;
		int i;
		int flag=0;
		for(i=2;i<=input;i++)
		{
			if(input%2==0)
			{
				
				flag=1;
				
				
			}
		}
		
		if (flag==0)
		{
				System.out.println("Prime Number");
		}
		else
			System.out.println("Not a Prime Number");
		
	}

}
